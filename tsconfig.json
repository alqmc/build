{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "noLib": false,
    "target": "ES2018",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "suppressExcessPropertyErrors": true,
    "lib": ["ES2018", "DOM"]
  },
  "include": ["package"],
  "exclude": ["node_modules"]
}
