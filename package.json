{
    "name": "@alqmc/build",
    "version": "0.0.1",
    "description": "build 工具",
    "author": "alqmc",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "url": "https://github.com/alqmc/build.git"
    },
    "scripts": {
        "test": "vitest",
        "lint": "eslint -c ./.eslintrc.js --fix --ext .ts",
        "clear": "rimraf dist",
        "build": "gulp --require sucrase/register/ts --gulpfile build/gulpfile.ts",
        "log": "npm run changelog",
        "changelog": "conventional-changelog -p custom-config  -i CHANGELOG.md  -s -r 0 -n ./changelog.config.js",
        "push": "git push gitee master && git push github master"
    },
    "devDependencies": {
        "@alqmc/build-ts": "^0.0.3",
        "@alqmc/build-utils": "^0.0.3",
        "@alqmc/eslint-config": "^0.0.4",
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@types/rimraf": "^3.0.2",
        "@vue/tsconfig": "^0.1.3",
        "compare-func": "^2.0.0",
        "conventional-changelog-cli": "^2.0.34",
        "conventional-changelog-custom-config": "^0.3.1",
        "cz-conventional-changelog": "^3.2.0",
        "fs-extra": "^10.1.0",
        "gulp": "^4.0.2",
        "husky": "^4.3.0",
        "lint-staged": "^10.3.0",
        "prettier": "^2.6.2",
        "sucrase": "^3.21.0",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "rimraf": "^3.0.2",
        "vite": "^2.9.5",
        "vue": "^3.2.33"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}