{
    "name": "@alqmc/build",
    "version": "0.0.1",
    "description": "build 工具",
    "author": "alqmc",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "url": "https://gitee.com/Y_onghu/build.git"
    },
    "scripts": {
        "test": "vitest",
        "lint": "eslint -c ./.eslintrc.js --fix --ext .ts",
        "clear": "rimraf dist",
        "build": "gulp --require sucrase/register/ts --gulpfile build/gulpfile.ts",
        "log": "npm run changelog",
        "changelog": "conventional-changelog -p custom-config  -i CHANGELOG.md  -s -r 0 -n ./changelog.config.js",
        "push": "git push gitee master && git push github master"
    },
    "devDependencies": {
        "@alqmc/eslint-config": "^0.0.2",
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@pnpm/types": "^8.0.0",
        "@types/archiver": "^5.3.1",
        "@types/fs-extra": "^9.0.13",
        "@types/gulp": "^4.0.9",
        "@types/node": "^17.0.25",
        "@types/prettier": "^2.6.0",
        "@types/rimraf": "^3.0.2",
        "@vue/tsconfig": "^0.1.3",
        "compare-func": "^2.0.0",
        "conventional-changelog-cli": "^2.0.34",
        "conventional-changelog-custom-config": "^0.3.1",
        "cz-conventional-changelog": "^3.2.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.3.0",
        "sucrase": "^3.21.0"
    },
    "dependencies": {
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.2.1",
        "@ts-morph/common": "^0.13.0",
        "@vitejs/plugin-vue": "^2.3.1",
        "archiver": "^5.3.1",
        "chalk": "4.1.2",
        "esbuild": "^0.14.38",
        "fast-glob": "^3.2.11",
        "fs-extra": "^10.1.0",
        "gulp": "^4.0.2",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.70.2",
        "rollup-plugin-esbuild": "^4.9.1",
        "ts-morph": "^14.0.0",
        "typescript": "^4.6.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}